@model IEnumerable<SGICInfoSystem.Models.Essay>

@{
    Layout = null;
    ViewBag.Title = "Рефераты";
}

<!DOCTYPE html>
<style>
    body {
        display: grid;
        grid-template-areas: "header header" "nav article" "footer footer";
        grid-template-rows: 10% 80% 10%;
        grid-template-columns: 20% 80%;
        grid-gap: 10px;
        height: 100vh;
        margin: 0;
    }

    header, footer, article, nav, div {
        padding: 20px;
    }

    #pageHeader {
        grid-area: header;
    }

    #pageFooter {
        grid-area: footer;
    }

    #mainArticle {
        grid-area: article;
    }

    #mainNav {
        grid-area: nav;
    }
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SGIC InfoSystem</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <header id="pageHeader">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SGIC InfoSystem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </header>
    <article id="mainArticle">
        <h2>Рефераты</h2>

        <p>
            @Html.ActionLink("Добавить запись", "Create")
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.nomer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tema1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tema2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aftor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Naz)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Org)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gorod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.God)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Str)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ilustr)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slova)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Referat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mesto)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.ActionLink("Изменить", "EditEssay", new { id = item.Id }) |
                            @Html.ActionLink("Просмотр", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nomer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tema1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tema2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aftor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Naz)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Org)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gorod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.God)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Str)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ilustr)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slova)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Referat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mesto)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </article>
    <nav id="mainNav">
        @using (Html.BeginForm())
        {

            @Html.CheckBox("CbNumber")
            @Html.Label("lblNumber", "Номер")
            @Html.TextBox("TbNumber")

            @Html.CheckBox("CbToNumber")
            @Html.Label("lblToNumber", "До")
            @Html.TextBox("TbToNumber")

            @Html.CheckBox("cbrubrika")
            @Html.Label("cbrubrika", "Рубрика")
            @Html.TextBox("tbrubrika");
            @Html.CheckBox("cbaftor")
            @Html.Label("cbaftor", "Автор")
            @Html.TextBox("tbaftor");
            @Html.CheckBox("cbnaz")
            @Html.Label("cbnaz", "Название")
            @Html.TextBox("tbnaz");
            @Html.CheckBox("cborg")
            @Html.Label("cborg", "Организация")
            @Html.TextBox("tborg");
            @Html.CheckBox("cbgorod");
            @Html.Label("cbgorod", "Город")
            @Html.TextBox("tbgorod");
            <input type="submit" value="Поиск" class="btn btn-default" />
        }
    </nav>
    <footer id="pageFooter">
        <p>&copy; @DateTime.Now.Year - SGIC InfoSystem</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
