@model PagedList.IPagedList<SGICInfoSystem.Models.Log>
@using PagedList.Mvc;
@using SGICInfoSystem.Models;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Журнал";
    Layout = "~/Views/Shared/_LayoutUz.cshtml";
}

<h2>Журнал</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DateTimeAction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().User)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeAction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
            </tr>
        }
    </tbody>
</table>


